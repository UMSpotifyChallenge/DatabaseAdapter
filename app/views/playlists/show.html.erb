<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @playlist.name %>
</p>

<p>
  <strong>Collaborative:</strong>
  <%= @playlist.collaborative %>
</p>

<p>
  <strong>Modified at:</strong>
  <%= @playlist.modified_at %>
</p>

<p>
  <strong>Num tracks:</strong>
  <%= @playlist.num_tracks %>
</p>

<p>
  <strong>Num albums:</strong>
  <%= @playlist.num_albums %>
</p>

<p>
  <strong>Num followers:</strong>
  <%= @playlist.num_followers %>
</p>

<p>
  <strong>Num edits:</strong>
  <%= @playlist.num_edits %>
</p>

<p>
  <strong>Duration ms:</strong>
  <%= @playlist.duration_ms %>
</p>

<p>
  <strong>Num artists:</strong>
  <%= @playlist.num_artists %>
</p>

<p>
  <strong>Description:</strong>
  <%= @playlist.description %>
</p>

<table>
  <thead>
    <tr>
      <th>Track name</th>
      <th>Artist name</th>
      <th>Album name</th>
      <th>Track uri</th>
      <th>Artist uri</th>
      <th>Album uri</th>
      <th>Duration ms</th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.track_name %></td>
        <td><%= track.artist_name %></td>
        <td><%= track.album_name %></td>
        <td><%= track.track_uri %></td>
        <td><%= track.artist_uri %></td>
        <td><%= track.album_uri %></td>
        <td><%= track.duration_ms %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_playlist_path(@playlist) %> |
<%= link_to 'Back', playlists_path %>
