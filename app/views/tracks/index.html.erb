<p id="notice"><%= notice %></p>

<h1>Tracks</h1>

<table>
  <thead>
    <tr>
      <th>Track name</th>
      <th>Artist name</th>
      <th>Album name</th>
      <th>Track uri</th>
      <th>Artist uri</th>
      <th>Album uri</th>
      <th>Duration ms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.track_name %></td>
        <td><%= track.artist_name %></td>
        <td><%= track.album_name %></td>
        <td><%= track.track_uri %></td>
        <td><%= track.artist_uri %></td>
        <td><%= track.album_uri %></td>
        <td><%= track.duration_ms %></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Edit', edit_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

